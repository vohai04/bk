@page
@model BookInfoFinder.Pages.Admin.CategoriesModel
@{
    ViewData["Title"] = "Quản lý thể loại";
    ViewData["Icon"] = "bi bi-tags-fill";
    ViewData["Description"] = "Quản lý thể loại sách trong hệ thống";
}

<div class="admin-form-wrapper mb-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4><i class="bi bi-tags-fill"></i> Danh sách thể loại</h4>
        <button type="button" class="btn btn-admin-success" data-bs-toggle="modal" data-bs-target="#addCategoryModal">
            <i class="bi bi-plus-circle"></i> Thêm thể loại
        </button>
    </div>
    <form method="get" class="row g-3" id="searchCategoryForm">
        <div class="col-md-8">
            <div class="admin-form-group">
                <label class="admin-form-label">
                    <i class="bi bi-search"></i>
                    Tìm kiếm thể loại
                </label>
                <input type="text" name="search" id="searchCategoryInput" class="form-control admin-form-control" 
                       placeholder="Nhập tên thể loại hoặc mô tả..." />
            </div>
        </div>
        <div class="col-md-4">
            <div class="admin-form-group">
                <label class="admin-form-label">&nbsp;</label>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-admin-primary flex-fill">
                        <i class="bi bi-search"></i>
                        Tìm kiếm
                    </button>
                    <a href="/Admin/Categories" class="btn btn-admin-secondary" title="Reset">
                        <i class="bi bi-arrow-clockwise"></i>
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="admin-table-wrapper">
    <div id="categoryTableContainer">
        <div class="admin-loading">
            <i class="bi bi-arrow-clockwise"></i>
            <span class="ms-2">Đang tải dữ liệu...</span>
        </div>
    </div>
</div>

<nav id="paginationCategoryNav" aria-label="Category pagination" class="mt-4">
    <ul class="pagination justify-content-center" id="paginationCategoryButtons"></ul>
</nav>

<!-- Modal Sửa Thể loại -->
<div class="modal fade" id="editCategoryModal" tabindex="-1" aria-labelledby="editCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form id="editCategoryForm" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editCategoryModalLabel">
                    <i class="bi bi-pencil-square"></i>
                    Sửa thông tin thể loại
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="editCategoryId" name="categoryId" />
                <div class="admin-form-group">
                    <label for="editCategoryName" class="admin-form-label">
                        <i class="bi bi-tag"></i>
                        Tên thể loại <span class="text-danger">*</span>
                    </label>
                    <input type="text" class="form-control admin-form-control" id="editCategoryName" name="name" 
                           required maxlength="50" />
                </div>
                <div class="admin-form-group">
                    <label for="editCategoryDesc" class="admin-form-label">
                        <i class="bi bi-card-text"></i>
                        Mô tả
                    </label>
                    <textarea class="form-control admin-form-control" id="editCategoryDesc" name="description" 
                              rows="3" maxlength="200" placeholder="Mô tả về thể loại..."></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-admin-primary">
                    <i class="bi bi-floppy"></i>
                    Lưu thay đổi
                </button>
                <button type="button" class="btn btn-admin-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </form>
    </div>
</div>

