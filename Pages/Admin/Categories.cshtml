@section Scripts {
    <script>
        $(document).ready(function () {
            const pageSize = 10;
            let currentPage = 1;

            // Initialize tooltips using site.js function
            initTooltips();

            function loadCategories(page = 1) {
                currentPage = page;
                const currentSearch = $('#searchCategoryInput').val();

                $('#categoryTableContainer').html(`
                    <div class="admin-loading">
                        <i class="bi bi-arrow-clockwise"></i>
                        <span class="ms-2">Đang tải dữ liệu...</span>
                    </div>
                `);

                $.get('/Admin/Categories?handler=AjaxSearch', {
                    search: currentSearch,
                    page: currentPage,
                    pageSize: pageSize
                })
                .done(function (data) {
                    renderCategories(data.categories);
                    renderPagination('#paginationCategoryButtons', data.totalPages, currentPage, function (page) {
                        loadCategories(page);
                    });
                })
                .fail(function() {
                    $('#categoryTableContainer').html(`
                        <div class="admin-alert admin-alert-danger">
                            <i class="bi bi-exclamation-triangle"></i>
                            Có lỗi xảy ra khi tải dữ liệu. Vui lòng thử lại.
                        </div>
                    `);
                });
            }

            function renderCategories(categories) {
                let html = '';
                
                if (!categories || categories.length === 0) {
                    html = `
                        <div class="text-center p-5">
                            <i class="bi bi-tags" style="font-size: 4rem; color: #6c757d;"></i>
                            <h5 class="mt-3 text-muted">Không tìm thấy thể loại nào</h5>
                            <p class="text-muted">Không có thể loại nào phù hợp với bộ lọc hiện tại.</p>
                            <a href="/Admin/Categories" class="btn btn-admin-primary">
                                <i class="bi bi-arrow-clockwise"></i>
                                Reset bộ lọc
                            </a>
                        </div>
                    `;
                    $('#paginationCategoryNav').hide();
                } else {
                    $('#paginationCategoryNav').show();
                    html = `
                        <table class="table admin-table">
                            <thead>
                                <tr>
                                    <th>
                                        <i class="bi bi-hash"></i>
                                        ID
                                    </th>
                                    <th>
                                        <i class="bi bi-tag"></i>
                                        Tên thể loại
                                    </th>
                                    <th>
                                        <i class="bi bi-card-text"></i>
                                        Mô tả
                                    </th>
                                    <th>
                                        <i class="bi bi-book"></i>
                                        Số sách
                                    </th>
                                    <th>
                                        <i class="bi bi-calendar"></i>
                                        Ngày tạo
                                    </th>
                                    <th style="width: 120px;">
                                        <i class="bi bi-gear"></i>
                                        Thao tác
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                    `;

                    categories.forEach(function(category) {
                        const description = category.description 
                            ? (category.description.length > 100 ? category.description.substring(0, 100) + '...' : category.description)
                            : '<span class="text-muted">Chưa có mô tả</span>';
                        
                        const createdAt = category.createdAt 
                            ? new Date(category.createdAt).toLocaleDateString('vi-VN')
                            : '<span class="text-muted">Chưa có</span>';

                        html += `
                            <tr>
                                <td><code>${category.categoryId}</code></td>
                                <td><strong>${category.name}</strong></td>
                                <td>${description}</td>
                                <td>
                                    <span class="badge bg-primary">${category.bookCount || 0}</span>
                                </td>
                                <td>${createdAt}</td>
                                <td>
                                    <div class="admin-action-buttons">
                                        <button type="button" 
                                                class="btn btn-warning btn-admin-sm btn-edit" 
                                                data-id="${category.categoryId}" 
                                                data-name="${category.name || ''}" 
                                                data-description="${category.description || ''}"
                                                title="Sửa"
                                                data-bs-toggle="tooltip">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <button type="button" 
                                                class="btn btn-admin-danger btn-admin-sm btn-delete" 
                                                data-id="${category.categoryId}" 
                                                data-name="${category.name}"
                                                data-book-count="${category.bookCount || 0}"
                                                title="Xóa"
                                                data-bs-toggle="tooltip">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        `;
                    });

                    html += `
                            </tbody>
                        </table>
                    `;
                }
                
                $('#categoryTableContainer').html(html);
                
                // Re-initialize tooltips for new content safely
                try {
                    if (typeof initTooltips === 'function') {
                        initTooltips();
                    }
                } catch (e) {
                    console.log('Tooltip initialization failed:', e);
                }
            }

            // Add category form submit using site.js showToast
            $('#addCategoryForm').on('submit', function(e) {
                e.preventDefault();
                
                const name = $(this).find('[name="Name"]').val().trim();
                const description = $(this).find('[name="Description"]').val().trim();

                if (!name) {
                    showToast('Vui lòng nhập tên thể loại!', 'error');
                    return;
                }

                $.post('/Admin/Categories?handler=AjaxAdd', { name, description })
                .done(function(response) {
                    if (response.success) {
                        showToast('Thêm thể loại thành công!', 'success');
                        $('#addCategoryForm')[0].reset();
                        $('#addCategoryModal').modal('hide');
                        
                        // Reload page to avoid conflicts
                        setTimeout(function() {
                            window.location.reload();
                        }, 1000);
                    } else {
                        showToast('Thêm thể loại thất bại: ' + (response.message || 'Lỗi không xác định'), 'error');
                    }
                })
                .fail(function() {
                    showToast('Có lỗi xảy ra khi thêm thể loại!', 'error');
                });
            });

            // Edit category modal
            $('#categoryTableContainer').on('click', '.btn-edit', function() {
                const categoryId = $(this).data('id');
                const name = $(this).data('name');
                const description = $(this).data('description');

                $('#editCategoryId').val(categoryId);
                $('#editCategoryName').val(name);
                $('#editCategoryDesc').val(description);
                
                $('#editCategoryModal').modal('show');
            });

            // Edit category form submit using site.js showToast
            $('#editCategoryForm').on('submit', function(e) {
                e.preventDefault();
                
                const categoryId = $('#editCategoryId').val();
                const name = $('#editCategoryName').val().trim();
                const description = $('#editCategoryDesc').val().trim();

                if (!name) {
                    showToast('Vui lòng nhập tên thể loại!', 'error');
                    return;
                }

                $.post('/Admin/Categories?handler=AjaxEdit', { categoryId, name, description })
                .done(function(response) {
                    if (response.success) {
                        showToast('Cập nhật thể loại thành công!', 'success');
                        $('#editCategoryModal').modal('hide');
                        loadCategories(currentPage);
                    } else {
                        showToast('Cập nhật thể loại thất bại: ' + (response.message || 'Lỗi không xác định'), 'error');
                    }
                })
                .fail(function() {
                    showToast('Có lỗi xảy ra khi cập nhật thể loại!', 'error');
                });
            });

            // Delete category using site.js showConfirmModal
            $('#categoryTableContainer').on('click', '.btn-delete', function() {
                const categoryId = $(this).data('id');
                const categoryName = $(this).data('name');
                const bookCount = $(this).data('book-count');

                let message = `Bạn có chắc chắn muốn xóa thể loại "<strong>${categoryName}</strong>"?`;
                if (bookCount > 0) {
                    message += `<br><br><span class="text-warning"><i class="bi bi-exclamation-triangle"></i> <strong>Cảnh báo:</strong> Thể loại này đang có ${bookCount} cuốn sách!</span>`;
                }
                message += `<br><br>Hành động này không thể hoàn tác!`;

                showConfirmModal(
                    'Xác nhận xóa',
                    message,
                    function() {
                        $.post('/Admin/Categories?handler=AjaxDelete', { categoryId: categoryId })
                        .done(function(response) {
                            if (response.success) {
                                showToast('Xóa thể loại thành công!', 'success');
                                loadCategories(currentPage);
                            } else {
                                showToast('Xóa thể loại thất bại: ' + (response.message || 'Lỗi không xác định'), 'error');
                            }
                        })
                        .fail(function() {
                            showToast('Có lỗi xảy ra khi xóa thể loại!', 'error');
                        });
                    }
                );
            });

            // Search form submit
            $('#searchCategoryForm').on('submit', function(e) {
                e.preventDefault();
                loadCategories(1);
            });

            // Load initial data
            loadCategories(1);
        });
    </script>
}

