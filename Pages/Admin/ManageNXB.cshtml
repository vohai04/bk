@page
@model BookInfoFinder.Pages.Admin.ManageNXBModel
@{
    ViewData["Title"] = "Quản lý nhà xuất bản";
    ViewData["Icon"] = "bi bi-building-fill";
    ViewData["Description"] = "Quản lý thông tin các nhà xuất bản";
}

<div class="admin-form-wrapper mb-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4><i class="bi bi-building-fill"></i> Danh sách nhà xuất bản</h4>
        <button type="button" class="btn btn-admin-success" data-bs-toggle="modal" data-bs-target="#addPublisherModal">
            <i class="bi bi-building-add"></i> Thêm NXB
        </button>
    </div>
</div>

<div class="admin-form-wrapper mb-4">
    <form method="get" class="row g-3" id="searchPublisherForm">
        <div class="col-md-8">
            <div class="admin-form-group">
                <label class="admin-form-label">
                    <i class="bi bi-search"></i>
                    Tìm kiếm nhà xuất bản
                </label>
                <input type="text" name="search" id="searchPublisherInput" class="form-control admin-form-control" 
                       placeholder="Nhập tên nhà xuất bản hoặc thông tin liên hệ..." />
            </div>
        </div>
        <div class="col-md-4">
            <div class="admin-form-group">
                <label class="admin-form-label">&nbsp;</label>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-admin-primary flex-fill">
                        <i class="bi bi-search"></i>
                        Tìm kiếm
                    </button>
                    <a href="/Admin/ManageNXB" class="btn btn-admin-secondary" title="Reset">
                        <i class="bi bi-arrow-clockwise"></i>
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="admin-table-wrapper">
    <div id="publisherTableContainer">
        <div class="admin-loading">
            <i class="bi bi-arrow-clockwise"></i>
            <span class="ms-2">Đang tải dữ liệu...</span>
        </div>
    </div>
</div>

<nav id="paginationPublisherNav" aria-label="Publisher pagination" class="mt-4">
    <ul class="pagination justify-content-center" id="paginationPublisherButtons"></ul>
</nav>

<!-- Modal Sửa NXB -->
<div class="modal fade" id="editPublisherModal" tabindex="-1" aria-labelledby="editPublisherModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <form id="editPublisherForm" class="modal-content">
            <div class="modal-header" style="background: var(--admin-primary); color: white;">
                <h5 class="modal-title" id="editPublisherModalLabel">
                    <i class="bi bi-pencil"></i>
                    Chỉnh sửa thông tin nhà xuất bản
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="editPublisherId" name="publisherId" />
                <div class="admin-form-group">
                    <label for="editPublisherName" class="admin-form-label">
                        <i class="bi bi-building"></i>
                        Tên nhà xuất bản <span class="text-danger">*</span>
                    </label>
                    <input type="text" class="form-control admin-form-control" id="editPublisherName" name="name" 
                           maxlength="100" required placeholder="Nhập tên nhà xuất bản..." />
                </div>
                <div class="admin-form-group">
                    <label for="editPublisherAddress" class="admin-form-label">
                        <i class="bi bi-geo-alt"></i>
                        Địa chỉ
                    </label>
                    <textarea class="form-control admin-form-control" id="editPublisherAddress" name="address" 
                              maxlength="200" rows="2" placeholder="Nhập địa chỉ nhà xuất bản..."></textarea>
                </div>
                <div class="admin-form-group">
                    <label for="editPublisherContact" class="admin-form-label">
                        <i class="bi bi-telephone"></i>
                        Thông tin liên hệ
                    </label>
                    <input type="text" class="form-control admin-form-control" id="editPublisherContact" name="contactInfo" 
                           maxlength="100" placeholder="Email, số điện thoại..." />
                    <div class="form-text">Tối đa 100 ký tự</div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-admin-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle"></i>
                    Hủy
                </button>
                <button type="submit" class="btn btn-admin-primary">
                    <i class="bi bi-check-circle"></i>
                    Lưu thay đổi
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>

    <script>
        $(document).ready(function () {
            const pageSize = 10;
            let currentPage = 1;

            // Initialize tooltips using site.js function
            initTooltips();

            function loadPublishers(page = 1) {
                currentPage = page;
                const currentSearch = $('#searchPublisherInput').val();

                $('#publisherTableContainer').html(`
                    <div class="admin-loading">
                        <i class="bi bi-arrow-clockwise"></i>
                        <span class="ms-2">Đang tải dữ liệu...</span>
                    </div>
                `);

                $.get('/Admin/ManageNXB?handler=AjaxSearch', {
                    search: currentSearch,
                    page: currentPage,
                    pageSize: pageSize
                })
                .done(function (data) {
                    renderPublishers(data.publishers);
                    renderPagination('#paginationPublisherButtons', data.totalPages, currentPage, function (page) {
                        loadPublishers(page);
                    });
                })
                .fail(function() {
                    $('#publisherTableContainer').html(`
                        <div class="admin-alert admin-alert-danger">
                            <i class="bi bi-exclamation-triangle"></i>
                            Có lỗi xảy ra khi tải dữ liệu. Vui lòng thử lại.
                        </div>
                    `);
                });
            }

            function renderPublishers(publishers) {
                let html = '';
                
                if (!publishers || publishers.length === 0) {
                    html = `
                        <div class="text-center p-5">
                            <i class="bi bi-building-x" style="font-size: 4rem; color: #6c757d;"></i>
                            <h5 class="mt-3 text-muted">Không tìm thấy nhà xuất bản nào</h5>
                            <p class="text-muted">Không có nhà xuất bản nào phù hợp với bộ lọc hiện tại.</p>
                            <a href="/Admin/ManageNXB" class="btn btn-admin-primary">
                                <i class="bi bi-arrow-clockwise"></i>
                                Reset bộ lọc
                            </a>
                        </div>
                    `;
                    $('#paginationPublisherNav').hide();
                } else {
                    $('#paginationPublisherNav').show();
                    html = `
                        <table class="table admin-table">
                            <thead>
                                <tr>
                                    <th>
                                        <i class="bi bi-hash"></i>
                                        ID
                                    </th>
                                    <th>
                                        <i class="bi bi-building"></i>
                                        Tên nhà xuất bản
                                    </th>
                                    <th>
                                        <i class="bi bi-geo-alt"></i>
                                        Địa chỉ
                                    </th>
                                    <th>
                                        <i class="bi bi-telephone"></i>
                                        Liên hệ
                                    </th>
                                    <th>
                                        <i class="bi bi-book"></i>
                                        Số sách
                                    </th>
                                    <th>
                                        <i class="bi bi-calendar-plus"></i>
                                        Ngày tạo
                                    </th>
                                    <th style="width: 120px;">
                                        <i class="bi bi-gear"></i>
                                        Thao tác
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                    `;

                    publishers.forEach(function(publisher) {
                        const address = publisher.address 
                            ? (publisher.address.length > 50 ? publisher.address.substring(0, 50) + '...' : publisher.address)
                            : '<span class="text-muted">Chưa có</span>';
                        
                        const contactInfo = publisher.contactInfo 
                            ? (publisher.contactInfo.length > 30 ? publisher.contactInfo.substring(0, 30) + '...' : publisher.contactInfo)
                            : '<span class="text-muted">Chưa có</span>';

                        html += `
                            <tr>
                                <td><code>${publisher.publisherId}</code></td>
                                <td><strong>${publisher.name}</strong></td>
                                <td>${address}</td>
                                <td>${contactInfo}</td>
                                <td>
                                    <span class="badge bg-primary">${publisher.bookCount || 0} sách</span>
                                </td>
                                <td>
                                    <span class="text-muted">${publisher.createdAtFormatted || 'N/A'}</span>
                                </td>
                                <td>
                                    <div class="admin-action-buttons">
                                        <button type="button" 
                                                class="btn btn-warning btn-admin-sm btn-edit" 
                                                data-id="${publisher.publisherId}" 
                                                data-name="${publisher.name || ''}" 
                                                data-address="${publisher.address || ''}"
                                                data-contact="${publisher.contactInfo || ''}"
                                                title="Sửa"
                                                data-bs-toggle="tooltip">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <button type="button" 
                                                class="btn btn-admin-danger btn-admin-sm btn-delete" 
                                                data-id="${publisher.publisherId}" 
                                                data-name="${publisher.name}"
                                                title="Xóa"
                                                data-bs-toggle="tooltip">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        `;
                    });

                    html += `
                            </tbody>
                        </table>
                    `;
                }
                
                $('#publisherTableContainer').html(html);
                
                // Re-initialize tooltips for new content
                initTooltips();
            }

            // Add publisher form submit
            $('#addPublisherForm').on('submit', function(e) {
                e.preventDefault();
                
                const formData = {
                    Name: $(this).find('[name="Name"]').val().trim(),
                    Address: $(this).find('[name="Address"]').val().trim(),
                    ContactInfo: $(this).find('[name="ContactInfo"]').val().trim()
                };

                if (!formData.Name) {
                    showToast('Vui lòng nhập tên nhà xuất bản!', 'error');
                    return;
                }

                $.post('/Admin/ManageNXB?handler=AjaxAdd', formData)
                .done(function(response) {
                    if (response.success) {
                        showToast('Thêm nhà xuất bản thành công!', 'success');
                        $('#addPublisherForm')[0].reset();
                        $('#addPublisherModal').modal('hide');
                        loadPublishers(currentPage);
                    } else {
                        showToast('Thêm nhà xuất bản thất bại: ' + (response.message || 'Lỗi không xác định'), 'error');
                    }
                })
                .fail(function() {
                    showToast('Có lỗi xảy ra khi thêm nhà xuất bản!', 'error');
                });
            });

            // Edit publisher modal
            $('#publisherTableContainer').on('click', '.btn-edit', function() {
                const publisherId = $(this).data('id');
                const name = $(this).data('name');
                const address = $(this).data('address');
                const contactInfo = $(this).data('contact');

                $('#editPublisherId').val(publisherId);
                $('#editPublisherName').val(name);
                $('#editPublisherAddress').val(address);
                $('#editPublisherContact').val(contactInfo);
                
                $('#editPublisherModal').modal('show');
            });

            // Edit publisher form submit
            $('#editPublisherForm').on('submit', function(e) {
                e.preventDefault();
                
                const formData = {
                    publisherId: $('#editPublisherId').val(),
                    name: $('#editPublisherName').val().trim(),
                    address: $('#editPublisherAddress').val().trim(),
                    contactInfo: $('#editPublisherContact').val().trim()
                };

                if (!formData.name) {
                    showToast('Vui lòng nhập tên nhà xuất bản!', 'error');
                    return;
                }

                $.post('/Admin/ManageNXB?handler=AjaxEdit', formData)
                .done(function(response) {
                    if (response.success) {
                        showToast('Cập nhật nhà xuất bản thành công!', 'success');
                        $('#editPublisherModal').modal('hide');
                        loadPublishers(currentPage);
                    } else {
                        showToast('Cập nhật nhà xuất bản thất bại: ' + (response.message || 'Lỗi không xác định'), 'error');
                    }
                })
                .fail(function() {
                    showToast('Có lỗi xảy ra khi cập nhật nhà xuất bản!', 'error');
                });
            });

            // Delete publisher
            $('#publisherTableContainer').on('click', '.btn-delete', function() {
                const publisherId = $(this).data('id');
                const publisherName = $(this).data('name');

                showConfirmModal(
                    'Xác nhận xóa',
                    `Bạn có chắc chắn muốn xóa nhà xuất bản "<strong>${publisherName}</strong>"?<br><br>Hành động này không thể hoàn tác!`,
                    function() {
                        $.post('/Admin/ManageNXB?handler=AjaxDelete', { publisherId: publisherId })
                        .done(function(response) {
                            if (response.success) {
                                showToast('Xóa nhà xuất bản thành công!', 'success');
                                loadPublishers(currentPage);
                            } else {
                                showToast('Xóa nhà xuất bản thất bại: ' + (response.message || 'Lỗi không xác định'), 'error');
                            }
                        })
                        .fail(function() {
                            showToast('Có lỗi xảy ra khi xóa nhà xuất bản!', 'error');
                        });
                    }
                );
            });

            // Search form submit
            $('#searchPublisherForm').on('submit', function(e) {
                e.preventDefault();
                loadPublishers(1);
            });

            // Load initial data
            loadPublishers(1);
        });
    </script>
}

<!-- Modal Thêm nhà xuất bản -->
<div class="modal fade" id="addPublisherModal" tabindex="-1" aria-labelledby="addPublisherModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <form id="addPublisherForm" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addPublisherModalLabel">
                    <i class="bi bi-building-add"></i> Thêm nhà xuất bản mới
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Tên nhà xuất bản *</label>
                            <input type="text" name="Name" class="form-control" placeholder="Nhập tên nhà xuất bản..." required maxlength="100" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Thông tin liên hệ</label>
                            <input type="text" name="ContactInfo" class="form-control" placeholder="Email, điện thoại..." maxlength="100" />
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Địa chỉ</label>
                    <textarea name="Address" class="form-control" placeholder="Nhập địa chỉ nhà xuất bản..." maxlength="300" rows="3"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check"></i> Thêm nhà xuất bản
                </button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
            </div>
        </form>
    </div>
</div>

