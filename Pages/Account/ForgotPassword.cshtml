@page
@model BookInfoFinder.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header text-center">
                    <h3>Quên mật khẩu</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @Model.ErrorMessage
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="alert alert-success" role="alert">
                            @Model.SuccessMessage
                        </div>
                    }

                    @if (!Model.IsOtpSent)
                    {
                        <div class="mb-3">
                            <p class="text-muted">Nhập email của bạn để nhận mã xác thực đặt lại mật khẩu.</p>
                        </div>

                        <form method="post" asp-page-handler="SendOtp">
                            <div class="form-group mb-3">
                                <label asp-for="Email" class="form-label">Email:</label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="Nhập địa chỉ email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">Gửi mã xác thực</button>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="mb-3">
                            <p class="text-muted">Mã xác thực đã được gửi đến email <strong>@Model.Email</strong>. Vui lòng kiểm tra hộp thư và nhập mã xác thực.</p>
                            <p class="text-info">
                                <small>Mã OTP có hiệu lực trong 5 phút.</small>
                            </p>
                        </div>

                        <form method="post" asp-page-handler="VerifyOtp">
                            <input asp-for="Email" type="hidden" />
                            
                            <div class="form-group mb-3">
                                <label asp-for="OtpCode" class="form-label">Mã xác thực (6 số):</label>
                                <input asp-for="OtpCode" type="text" class="form-control text-center" 
                                       placeholder="000000" maxlength="6" style="font-size: 1.5rem; letter-spacing: 0.5rem;" />
                                <span asp-validation-for="OtpCode" class="text-danger"></span>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-success">Xác thực OTP</button>
                                <button type="submit" asp-page-handler="ResendOtp" class="btn btn-outline-secondary">Gửi lại mã</button>
                            </div>
                        </form>
                    }

                    <div class="text-center mt-3">
                        <a asp-page="/Account/Login" class="text-decoration-none">Quay lại đăng nhập</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Auto-focus và auto-submit khi nhập đủ 6 số OTP
        document.addEventListener('DOMContentLoaded', function() {
            const otpInput = document.querySelector('input[asp-for="OtpCode"]');
            if (otpInput) {
                otpInput.focus();
                
                otpInput.addEventListener('input', function() {
                    // Chỉ cho phép số
                    this.value = this.value.replace(/\D/g, '');
                    
                    // Auto submit khi đủ 6 số
                    if (this.value.length === 6) {
                        // Tự động submit form verify OTP
                        this.form.submit();
                    }
                });
            }
        });
    </script>
}